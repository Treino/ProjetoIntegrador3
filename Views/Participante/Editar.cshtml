@model PROJETO3.Models.Participante

@{
    ViewBag.Title = "Editar";
}

<h2>EDITAR</h2>


@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    
    <div class="form-horizontal">
        <h4>Participante</h4>
        <hr />
        @Html.ValidationSummary(true)
        @Html.HiddenFor(model => model.codParticipante)

        <div class="form-group">
            @Html.LabelFor(model => model.nmParticipante, new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.nmParticipante)
                @Html.ValidationMessageFor(model => model.nmParticipante)
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.codCurso, new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.DropDownList("codCurso", String.Empty)
                @Html.ValidationMessageFor(model => model.codCurso)
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.email, new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.email)
                @Html.ValidationMessageFor(model => model.email)
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.senha, new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.senha)
                @Html.ValidationMessageFor(model => model.senha)
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.ativo, new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.ativo)
                @Html.ValidationMessageFor(model => model.ativo)
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="SALVAR" class="btn btn-default" />
            </div>
        </div>
    </div>
}

<div>
    @Html.ActionLink("RETORNAR À LISTA", "Index")
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
